@model IEnumerable<Lech_Poznań.Models.Sztab>

@{
    ViewBag.Title = "Index";
}


<p>
    <h3>@Html.ActionLink("Dodaj nowego pracownika", "Create")</h3>
</p>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <th>
                @Html.DropDownList("Id_Funkcji", null, htmlAttributes: new { @class = "form-control" })
            </th>
            <th>
                @Html.TextBox("Search")<input type="submit" value="Szukaj" class="btn btn-default" />
            </th>
        </tr>
    </table>
}
<div class="tylTabeli">
    <table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Imię)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nazwisko)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Funckje.Funkcja)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Zdjęcie)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imię)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funckje.Funkcja)
            </td>
            <td>
                <img src="@Url.Content(item.Zdjęcie)" width="200" height="150"/>
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
</div>

