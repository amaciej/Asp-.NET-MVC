@model IEnumerable<Lech_Poznań.Models.Nagrody_dla_zawodników>

@{
    ViewBag.Title = "Index";
}


<p>
    <h3>@Html.ActionLink("Dodaj", "Create")</h3>
</p>
@using (Html.BeginForm())
{
    <table>
        <tr>
            <th>
                @Html.DropDownList("Id_Nagrody", null, htmlAttributes: new { @class = "form-control" })
            </th>
            <th>
                <input type="submit" value="Szukaj" class="btn btn-default" />
            </th>
        </tr>
    </table>
}
<div class="tylTabeli">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nagrody.Nagroda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zawodnicy.Imię)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zawodnicy.Nazwisko)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nagrody.Nagroda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zawodnicy.Imię)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Zawodnicy.Nazwisko)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IdNZ }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IdNZ })
                </td>
            </tr>
        }

    </table>
</div>

